<h1>Listing products</h1>

<table>
  <tr>
    <th>Visible</th>
    <th>Upc</th>
    <th>Name</th>
    <th>Description</th>
    <th>Original price</th>
    <th>Sale price</th>
    <th>On sale</th>
    <th>Category</th>
    <th>Brand</th>
    <th>External</th>
    <th>Source site</th>
    <th>Rating</th>
    <th>Pic url</th>
    <th>Likes</th>
    <th>Disabled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.visible_id %></td>
    <td><%= product.upc %></td>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.original_price %></td>
    <td><%= product.sale_price %></td>
    <td><%= product.on_sale %></td>
    <td><%= product.category %></td>
    <td><%= product.brand %></td>
    <td><%= product.external_id %></td>
    <td><%= product.source_site %></td>
    <td><%= product.rating %></td>
    <td><%= product.pic_url %></td>
    <td><%= product.likes %></td>
    <td><%= product.disabled %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

